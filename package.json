{
  "name": "pause",
  "version": "1.2.0",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "next": "^16.1.1",
      "@trpc/server": "^11.7.2",
      "@trpc/client": "^11.7.2",
      "better-auth": "^1.4.9"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:db": "docker compose up -d db",
    "dev:db:stop": "docker compose down",
    "dev:db:logs": "docker compose logs -f db",
    "db:push": "turbo -F @pause/db db:push",
    "db:studio": "turbo -F @pause/db db:studio",
    "db:generate": "turbo -F @pause/db db:generate",
    "db:migrate": "turbo -F @pause/db db:migrate",
    "db:seed:rookie": "DOTENV_CONFIG_PATH=apps/web/.env bun run scripts/seed-rookie.ts",
    "db:seed:pro": "DOTENV_CONFIG_PATH=apps/web/.env bun run scripts/seed-pro.ts",
    "test:smoke-trace": "bun run scripts/test-smoke-trace.ts",
    "test": "vitest run",
    "check": "ultracite check",
    "fix": "ultracite fix",
    "knip": "knip",
    "prepare": "[ -n \"$CI\" ] || lefthook install"
  },
  "dependencies": {
    "@pause/env": "workspace:*",
    "dotenv": "catalog:",
    "opik": "^1.10.6",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@commitlint/cli": "^20.4.0",
    "@commitlint/config-conventional": "^20.4.0",
    "@pause/config": "workspace:*",
    "@types/node": "^22.13.14",
    "happy-dom": "^20.5.0",
    "knip": "^5.82.1",
    "lefthook": "^2.0.16",
    "turbo": "^2.6.3",
    "typescript": "catalog:",
    "ultracite": "7.1.3",
    "vitest": "^4.0.18"
  },
  "packageManager": "bun@1.3.5"
}
