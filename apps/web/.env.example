# =====================================
# PAUSE APPLICATION - ENVIRONMENT VARIABLES
# =====================================
# Copy this file to .env and fill in the values
# Required variables must be set for the application to start
# =====================================

# =====================================
# DATABASE
# =====================================

# Neon PostgreSQL connection string (pooled) [REQUIRED]
# Format: postgresql://user:password@host/database?sslmode=require
# Get from: Neon Dashboard > Connection Details > Connection String
DATABASE_URL=

# Neon PostgreSQL direct connection (non-pooled) [OPTIONAL]
# Used for migrations and admin operations
# Format: postgresql://user:password@host/database?sslmode=require
DATABASE_URL_DIRECT=

# Neon Local development proxy [OPTIONAL]
# Format: postgresql://postgres:postgres@localhost:4000/main
# Overrides DATABASE_URL when set (for local development with `bun run dev:db`)
DATABASE_URL_LOCAL=

# Neon-Vercel integration non-pooled URL [OPTIONAL]
# Auto-set by Vercel when Neon integration is connected
# Equivalent to DATABASE_URL_DIRECT
DATABASE_URL_UNPOOLED=

# Neon API key for local proxy authentication [OPTIONAL]
# Only needed for local development with `bun run dev:db`
# Without this key, local proxy falls back to DATABASE_URL_LOCAL if set
# Get from: Neon Dashboard > API Keys
NEON_API_KEY=

# =====================================
# AUTHENTICATION
# =====================================

# Better Auth secret key [REQUIRED]
# Must be at least 32 characters for security
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=

# Better Auth callback base URL [REQUIRED]
# Local development: http://localhost:3001
# Production: https://your-domain.com
BETTER_AUTH_URL=

# CORS origin override [OPTIONAL]
# Falls back to VERCEL_URL (on Vercel) or BETTER_AUTH_URL (local)
# Set this for custom domain deployments
CORS_ORIGIN=

# =====================================
# OBSERVABILITY (Opik Tracing)
# =====================================

# Opik API key for trace collection [OPTIONAL in dev, REQUIRED in prod]
# Get from: https://www.comet.com/opik > API Keys
# Traces Guardian AI interactions for debugging and analysis
OPIK_API_KEY=

# Opik project name [OPTIONAL]
# Default: "pause"
# Groups traces in Opik dashboard by project
OPIK_PROJECT_NAME=pause

# Opik workspace name [OPTIONAL]
# For team/organization workspace separation
OPIK_WORKSPACE=

# =====================================
# AI PROVIDERS
# =====================================

# AI Model Selection [OPTIONAL]
# Format: "provider:model" (e.g., "zhipu:glm-4.7-Flash", "google:gemini-2.5-flash")
# Default: "zhipu:glm-4.7-Flash"
# Available providers: google, zhipu
# Available models:
#   zhipu:glm-4.7-Flash (default, free tier)
#   zhipu:glm-4.7 (flagship, $0.60/$2.20 per 1M tokens)
#   zhipu:glm-4.7-FlashX (lightweight, paid)
#   google:gemini-3-flash-preview (10 RPM, 250 RPD)
#   google:gemini-2.5-flash
AI_MODEL=google:gemini-3-flash-preview

# Google Generative AI API key [REQUIRED when AI_MODEL starts with "google:"]
# Powers the Guardian AI (Gemini 3 Flash Preview model)
# Get from: https://aistudio.google.com/apikey
GOOGLE_GENERATIVE_AI_API_KEY=

# Z.AI / Zhipu API key [REQUIRED when AI_MODEL starts with "zhipu:"]
# Powers GLM-4.7 model (OpenAI-compatible API)
# Get from: https://z.ai/manage-apikey/apikey-list
ZHIPU_API_KEY=

# =====================================
# DEMO & FEATURE FLAGS
# =====================================

# Demo mode flag [OPTIONAL]
# Default: "false"
# When "true":
#   - Uses deterministic AI behavior for reproducible demos
#   - Adds demo tag to Opik traces
#   - May enable additional demo-specific features
DEMO_MODE=false

# =====================================
# VERCEL (Auto-injected, do not set manually)
# =====================================

# These are automatically set by Vercel deployments:
# VERCEL_URL - Deployment URL (used for CORS fallback)
# VERCEL_ENV - Environment: "production", "preview", or "development"
